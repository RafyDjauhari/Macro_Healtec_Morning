<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cari_1"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:background="@color/Accent2"
    tools:context=".Cari">

    <LinearLayout
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:padding="14sp"
        android:orientation="horizontal"
        android:background="@drawable/edit_text_background">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/outline_search_24"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="Cari obat, zat, nama apotek, ..."
            android:textColor="@color/Secondary1"
            android:layout_weight="2" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_filter_list_24"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/inginCariApa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchButton"
        android:layout_marginVertical="20dp"
        android:text="Ingin cari apa ?"
        android:textColor="#133695"
        android:textSize="25dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_below="@id/inginCariApa">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/remedy_amico"
                    android:background="@color/white"
                    app:shapeAppearanceOverlay="@style/roundImageView"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:text="Informasi Obat"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/Primary1"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_toRightOf="@id/item_1"
            android:id="@+id/item_2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="140dp"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/location_search"
                    android:background="@color/white"
                    app:shapeAppearanceOverlay="@style/roundImageView"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:text="Lokasi Apotek"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/Primary1"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/item_3"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/item_1"
            android:layout_marginHorizontal="5dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/medicine_bro"
                    android:background="@color/white"
                    app:shapeAppearanceOverlay="@style/roundImageView"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:text="Komposisi"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/Primary1"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>