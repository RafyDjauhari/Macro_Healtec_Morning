<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.ApotekFragment">

    <TextView
        android:id="@+id/apotek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:layout_marginTop="30dp"
        android:text="Apotek"
        android:textColor="#133695"
        android:textSize="25dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/apotek_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="25dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:text="Apotek Roxy Taman Galaxy"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/Primary1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="center"
                    android:text="Jl. Taman Galaxy Raya No.17-18"
                    android:textSize="14sp"
                    android:textColor="@color/Primary1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="center"
                    android:text="Tutup pukul 21.30"
                    android:textSize="14sp"
                    android:textColor="@color/Primary1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="center"
                    android:text="Belanja di Toko - Ambil di Toko"
                    android:textSize="14sp"
                    android:textColor="@color/Primary1"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/leftText"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/jarakText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="± 230 M"
                    android:textAlignment="center"
                    android:layout_alignRight="@id/lacakButton"
                    android:textColor="@color/Primary1"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/lacakButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jarakText"
                    android:layout_alignRight="@id/teleponButton"
                    android:background="@drawable/login_button_bg"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="7dp"
                    android:text="Lacak"
                    android:textSize="18sp"
                    android:textColor="@color/Primary2"/>
                <TextView
                    android:id="@+id/teleponButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lacakButton"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_text_background"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="7dp"
                    android:text="Telepon"
                    android:textSize="18sp"
                    android:textColor="@color/Secondary1"/>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/apotek_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="25dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:text="K24 Dres Kuningan"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/Primary1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="center"
                    android:text="Jl. Siliwangi, No. 1 Cirendang"
                    android:textSize="14sp"
                    android:textColor="@color/Primary1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="center"
                    android:text="Tutup pukul 00.00"
                    android:textSize="14sp"
                    android:textColor="@color/Primary1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="center"
                    android:text="Belanja di Toko"
                    android:textSize="14sp"
                    android:textColor="@color/Primary1"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/leftText"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/jarakText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="± 230 M"
                    android:textAlignment="center"
                    android:layout_alignRight="@id/lacakButton2"
                    android:textColor="@color/Primary1"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/lacakButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jarakText2"
                    android:layout_alignRight="@id/teleponButton2"
                    android:background="@drawable/login_button_bg"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="7dp"
                    android:text="Lacak"
                    android:textSize="18sp"
                    android:textColor="@color/Primary2"/>
                <TextView
                    android:id="@+id/teleponButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lacakButton2"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_text_background"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="7dp"
                    android:text="Telepon"
                    android:textSize="18sp"
                    android:textColor="@color/Secondary1"/>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>