<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Accent2"
    android:orientation="vertical"
    tools:context=".Cari2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/obat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/content"
                android:layout_marginTop="5dp"
                android:text="Obat"
                android:textColor="#133695"
                android:textSize="25dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                android:layout_below="@id/inginCariApa">

                <androidx.cardview.widget.CardView
                    android:id="@+id/item_1"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginVertical="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="15dp"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/valdres"
                            android:background="@color/white"
                            app:shapeAppearanceOverlay="@style/roundImageViewStroke"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/Primary1"
                            tools:ignore="MissingConstraints" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:textAlignment="center"
                            android:text="Valdres 25 mg"
                            android:textSize="16sp"
                            android:textColor="@color/Primary1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="10 Tablet"
                            android:textSize="16sp"
                            android:textColor="@color/Primary1"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/item_2"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_toEndOf="@id/item_1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginVertical="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="15dp"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/valtrex"
                            android:background="@color/white"
                            app:shapeAppearanceOverlay="@style/roundImageView"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/Primary1"
                            tools:ignore="MissingConstraints" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:textAlignment="center"
                            android:text="Valdres 25 mg"
                            android:textSize="16sp"
                            android:textColor="@color/Primary1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="10 Tablet"
                            android:textSize="16sp"
                            android:textColor="@color/Primary1"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/item_3"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_below="@id/item_1"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="15dp"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/valvir"
                            android:background="@color/white"
                            app:shapeAppearanceOverlay="@style/roundImageView"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/Primary1"
                            tools:ignore="MissingConstraints" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:textAlignment="center"
                            android:text="Valdres 25 mg"
                            android:textSize="16sp"
                            android:textColor="@color/Primary1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="10 Tablet"
                            android:textSize="16sp"
                            android:textColor="@color/Primary1"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/item_4"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_toEndOf="@id/item_3"
                    android:layout_below="@id/item_2"
                    android:layout_marginLeft="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="15dp"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/valacyclovir"
                            android:background="@color/white"
                            app:shapeAppearanceOverlay="@style/roundImageView"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/Primary1"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Valdres 25 mg"
                            android:textAlignment="center"
                            android:textColor="@color/Primary1"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="10 Tablet"
                            android:textSize="16sp"
                            android:textColor="@color/Primary1"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/obatLengkap"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardView"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5sp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/edit_text_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:text="Lihat semua hasil Obat"
                    android:textColor="@color/Secondary1"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"/>
            </LinearLayout>

            <TextView
                android:id="@+id/apotek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/content"
                android:layout_marginTop="30dp"
                android:text="Apotek"
                android:textColor="#133695"
                android:textSize="25dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/apotek_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="25dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:textAlignment="center"
                            android:text="Apotek Roxy Taman Galaxy"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/Primary1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:textAlignment="center"
                            android:text="Jl. Taman Galaxy Raya No.17-18"
                            android:textSize="14sp"
                            android:textColor="@color/Primary1"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/leftText"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/jarakText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="± 2 KM"
                            android:textAlignment="center"
                            android:layout_alignRight="@id/lacakButton"
                            android:textColor="@color/Primary1"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/lacakButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/jarakText"
                            android:background="@drawable/login_button_bg"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="7dp"
                            android:text="Lacak"
                            android:textSize="18sp"
                            android:textColor="@color/Primary2"/>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/apotek_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="25dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:textAlignment="center"
                            android:text="K24 Kuningan"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/Primary1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:textAlignment="center"
                            android:text="Jl. Siliwangi, No. 1 Cirendang"
                            android:textSize="14sp"
                            android:textColor="@color/Primary1"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/leftText"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/jarakText2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="± 2 KM"
                            android:textAlignment="center"
                            android:layout_alignRight="@id/lacakButton2"
                            android:textColor="@color/Primary1"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/lacakButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/jarakText2"
                            android:background="@drawable/login_button_bg"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="7dp"
                            android:text="Lacak"
                            android:textSize="18sp"
                            android:textColor="@color/Primary2"/>

                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/apotekLengkap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardView"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5sp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/edit_text_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:text="Lihat semua hasil Apotek"
                    android:textColor="@color/Secondary1"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"/>
            </LinearLayout>

            <TextView
                android:id="@+id/komposisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Komposisi"
                android:textColor="#133695"
                android:textSize="25dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/komposisi_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="Paracetamol"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/Primary1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="Tablet 500mg"
                                android:textSize="14sp"
                                android:textColor="@color/Primary1"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/leftText"
                            android:layout_centerVertical="true">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5sp"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Detail"
                                    android:textStyle="bold"
                                    android:textColor="@color/Secondary1"
                                    android:textSize="18sp"/>

                                <ImageView
                                    android:layout_width="23dp"
                                    android:layout_height="23dp"
                                    android:src="@drawable/baseline_keyboard_arrow_right_24"/>
                            </LinearLayout>


                        </RelativeLayout>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="PARACETAMOL TABLET merupakan obat yang dapat digunakan untuk meringankan rasa sakit pada sakit kepala, sakit gigi, dan menurunkan demam."
                        android:textAlignment="gravity"
                        android:textColor="@color/Primary1"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/komposisi_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="Diphenhydramine HCI"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/Primary1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="25 mg"
                                android:textSize="14sp"
                                android:textColor="@color/Primary1"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/leftText"
                            android:layout_centerVertical="true">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5sp"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Detail"
                                    android:textStyle="bold"
                                    android:textColor="@color/Secondary1"
                                    android:textSize="18sp"/>

                                <ImageView
                                    android:layout_width="23dp"
                                    android:layout_height="23dp"
                                    android:src="@drawable/baseline_keyboard_arrow_right_24"/>
                            </LinearLayout>


                        </RelativeLayout>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Diphenhydramine adalah obat untuk meredakan gejala alergi dan batuk pilek (common cold). Selain itu, obat ini juga dapat digunakan untuk kondisi tremor dan kaku otot pada penderita Parkinson."
                        android:textAlignment="gravity"
                        android:textColor="@color/Primary1"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/komposisiLengkap"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardView"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5sp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/edit_text_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:text="Lihat semua hasil Komposisi"
                    android:textColor="@color/Secondary1"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>