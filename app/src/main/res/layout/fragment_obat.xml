<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.ObatFragment">

    <TextView
        android:id="@+id/obat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:layout_marginTop="5dp"
        android:text="Obat"
        android:textColor="#133695"
        android:textSize="25dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_below="@id/inginCariApa">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginVertical="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/valdres"
                    android:background="@color/white"
                    app:shapeAppearanceOverlay="@style/roundImageViewStroke"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/Primary1"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:text="Valdres 25 mg"
                    android:textSize="16sp"
                    android:textColor="@color/Primary1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="10 Tablet"
                    android:textSize="16sp"
                    android:textColor="@color/Primary1"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/item_2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_toEndOf="@id/item_1"
            android:layout_marginLeft="20dp"
            android:layout_marginVertical="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/valtrex"
                    android:background="@color/white"
                    app:shapeAppearanceOverlay="@style/roundImageView"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/Primary1"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:text="Valdres 25 mg"
                    android:textSize="16sp"
                    android:textColor="@color/Primary1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="10 Tablet"
                    android:textSize="16sp"
                    android:textColor="@color/Primary1"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/item_3"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@id/item_1"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/valvir"
                    android:background="@color/white"
                    app:shapeAppearanceOverlay="@style/roundImageView"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/Primary1"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:text="Valdres 25 mg"
                    android:textSize="16sp"
                    android:textColor="@color/Primary1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="10 Tablet"
                    android:textSize="16sp"
                    android:textColor="@color/Primary1"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/item_4"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_toEndOf="@id/item_3"
            android:layout_below="@id/item_2"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/valacyclovir"
                    android:background="@color/white"
                    app:shapeAppearanceOverlay="@style/roundImageView"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/Primary1"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Valdres 25 mg"
                    android:textAlignment="center"
                    android:textColor="@color/Primary1"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="10 Tablet"
                    android:textSize="16sp"
                    android:textColor="@color/Primary1"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</LinearLayout>